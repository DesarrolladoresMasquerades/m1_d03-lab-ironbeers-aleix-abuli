{{#each responseFromApi}}
    <div>
        <img src="{{this.image_url}}" alt="">
        <div>
            <h1>{{this.name}}</h1>
            <h2>{{this.tagline}}</h2>
            <p>{{this.description}}</p>
            <span>Food pairing:</span>
            <ul>
                {{#each this.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><span>Brewers tips: </span>{{this.brewers_tips}}</p>
        </div>
    </div>
{{/each}}